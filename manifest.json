{
    "manifest_version": 3,
    "name": "Longman Definition Screenshot",
    "version": "1.0",
    "description": "在朗文在线字典的每个解释右侧添加截图按钮，点击后自动截取该解释的截图。",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["https://www.ldoceonline.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.ldoceonline.com/dictionary/*"],
            "js": ["content.js"],
            "run_at": "document_idle",
            "css": ["styles.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icon.png"],
            "matches": ["https://www.ldoceonline.com/*"]
        }
    ],
    "action": {
        "default_title": "朗文字典截图插件"
    }
}